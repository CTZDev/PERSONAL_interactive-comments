---
import Button from "./Button.astro";

interface Props {
  img: string;
  altImg: string;
}

const { img, altImg } = Astro.props;
---

<article
  class="mx-4 mb-4 p-4 rounded-lg bg-white flex flex-wrap items-start md:gap-4">
  <textarea
    name="txtacomments"
    id="txtacomments"
    class="resize-none min-h-28 border-black border-opacity-25 border rounded-lg p-3 mb-4 flex-1 min-w-full md:min-w-min md:order-2 focus:outline-none focus:border-moderate-blue"
    placeholder="Add a comment..."></textarea>
  <img src={img} alt={altImg} width="40" height="40" class="md:order-1" />
  <Button
    text="Send"
    className="ml-auto border border-black px-8 py-2.5 rounded-md text-white bg-moderate-blue uppercase md:order-3"
  />
</article>
